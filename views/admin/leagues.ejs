<%- include('../partials/header') %>

    <div class="main-container">
        <div class="glass-panel">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h1><i class="fas fa-trophy"></i> Gestione Leghe</h1>
                <a href="/admin" class="btn btn-secondary">Torna alla Dashboard</a>
            </div>

            <!-- Create New League -->
            <div style="background: rgba(255,255,255,0.05); padding: 20px; border-radius: 10px; margin-bottom: 30px;">
                <h3>Crea Nuova Lega</h3>
                <form action="/admin/leagues" method="POST" style="display: flex; gap: 15px; align-items: flex-end;">
                    <div class="form-group" style="flex: 2;">
                        <label>Nome Lega</label>
                        <input type="text" name="name" class="form-control" required
                            placeholder="Es. Lega Invernale 2026">
                    </div>
                    <div class="form-group" style="flex: 1;">
                        <label>Numero Tappe</label>
                        <input type="number" name="max_stops" class="form-control" value="5" min="1">
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-bottom: 2px;">Crea Lega</button>
                </form>
            </div>

            <!-- List Leagues -->
            <h3>Leghe Esistenti</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Stato</th>
                        <th>Tappe</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(leagues.length===0) { %>
                        <tr>
                            <td colspan="4" style="text-align: center;">Nessuna lega trovata. Creane una!</td>
                        </tr>
                        <% } %>
                            <% leagues.forEach(l=> { %>
                                <tr>
                                    <td><strong>
                                            <%= l.name %>
                                        </strong></td>
                                    <td>
                                        <% if(l.status==='active' ) { %>
                                            <span style="color: var(--secondary);">In Corso</span>
                                            <% } else { %>
                                                <span style="color: var(--primary);">Terminata</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= l.stops.length %> / <%= l.max_stops %>
                                    </td>
                                    <td>
                                        <a href="/admin/leagues/<%= l.id %>" class="btn btn-sm btn-primary">Gestisci</a>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/footer') %>