<%- include('../partials/header') %>

    <div class="glass-panel">
        <h1><i class="fas fa-trophy"></i> Amministrazione Tornei</h1>
        <a href="/admin/tournaments/new" class="btn btn-primary" style="margin-bottom: 20px;">+ Crea Nuovo Torneo</a>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Data</th>
                    <th>Stato</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                <% tournaments.forEach(t=> { %>
                    <tr>
                        <td>
                            <%= t.id %>
                        </td>
                        <td>
                            <%= t.name %>
                        </td>
                        <td>
                            <%= t.date %>
                        </td>
                        <td><span class="status-tag <%= t.status %>">
                                <%= t.status %>
                            </span></td>
                        <td>
                            <a href="/tournaments/<%= t.id %>" class="btn">Vedi</a>
                            <form action="/admin/tournaments/<%= t.id %>/delete" method="POST" style="display:inline;"
                                onsubmit="return confirm('Sei sicuro di voler eliminare questo torneo?');">
                                <button class="btn"
                                    style="background:red; color:white; padding: 5px 10px;">Elimina</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer') %>