<!DOCTYPE html>
<html lang="it" data-theme="light">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Taccuino magico</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap" rel="stylesheet">
    <script src="/js/tournament-scores.js"></script>
    <style>
        body {
            font-family: 'Outfit', sans-serif;
        }
    </style>
</head>

<body>
    <nav class="navbar glass-panel">
        <div class="logo">
            <a href="/"
                style="text-decoration: none; color: var(--text-color); font-size: 1.5rem; font-weight: 800; display: flex; align-items: center; gap: 10px;">
                <i class="fas fa-book" style="color: var(--primary);"></i> Taccuino magico
            </a>
        </div>
        <div class="nav-links">
            <a href="/" class="nav-item">Home</a>
            <a href="/tournaments" class="nav-item">Vedi tutti i tornei</a>

            <% if (typeof user !=='undefined' && user) { %>
                <div class="user-menu">
                    <img src="/<%= user.avatar %>" alt="Avatar" class="avatar">
                    <span>
                        <%= user.username %>
                    </span>
                    <i class="fas fa-chevron-down"></i>
                    <div class="dropdown-menu">
                        <a href="/profile" class="nav-item"><i class="fas fa-user"></i> Profilo</a>
                        <a href="/settings" class="nav-item"><i class="fas fa-cog"></i> Impostazioni</a>
                        <% if (user.role==='admin' || user.role==='organizer' ) { %>
                            <div style="border-top: 1px solid var(--glass-border); margin: 5px 0;"></div>
                            <a href="/admin" class="nav-item"><i class="fas fa-shield-alt"></i> Pannello Admin</a>
                            <% } %>
                                <div style="border-top: 1px solid var(--glass-border); margin: 5px 0;"></div>
                                <a href="/logout" class="nav-item" style="color: var(--accent);"><i
                                        class="fas fa-sign-out-alt"></i> Logout</a>
                    </div>
                </div>
                <% } else { %>
                    <a href="/login" class="btn btn-primary">Accedi</a>
                    <% } %>
        </div>
        </div>
    </nav>

    <script>
        // Mobile Dropdown Toggle
        document.addEventListener('DOMContentLoaded', () => {
            const userMenu = document.querySelector('.user-menu');
            if (userMenu) {
                userMenu.addEventListener('click', (e) => {
                    // Only toggle on click if window is small (mobile) or just always for touch support
                    // For simplicity, we toggle class 'active'
                    e.stopPropagation();
                    userMenu.classList.toggle('active');

                    // Also toggle display property if using inline style or class
                    const dropdown = userMenu.querySelector('.dropdown-menu');
                    if (dropdown) {
                        const style = window.getComputedStyle(dropdown);
                        // Check via CSS class mostly
                    }
                });

                // Close on click outside
                document.addEventListener('click', () => {
                    userMenu.classList.remove('active');
                });
            }
        });
    </script>

    <div class="container">